	<select id="detail" resultType="hashmap">
		SELECT  /* boardQuery.detail 2013.08.21 최지순 */  
			* 
		FROM BG_BOARD_MASTER
		WHERE 1=1
		AND BOARD_ID = #{board_id}
		AND USE_YN = 'Y'
	</select>
	
	<select id="boardInfoByName" resultType="hashmap">
		SELECT  /* boardQuery.boardInfoByName 2013.08.21 최지순 */  
			* 
		FROM BG_BOARD_MASTER
		WHERE 1=1
		AND BOARD_ID = #{boardName}
		AND USE_YN = 'Y'
		ORDER BY BOARD_ID DESC
	</select>
	
	
	<update id="delete">
		UPDATE  /* boardQuery.delete 2013.08.21 최지순 */  
			BG_BOARD_MASTER 
		SET 
			USE_YN = 'N'
		WHERE 1=1
		AND BOARD_ID = #{board_id}
	</update>
	
	<update id="deleteByName">
		UPDATE  /* boardQuery.deleteByName 2013.08.21 최지순 */  
			BG_BOARD_MASTER 
		SET 
			USE_YN = 'N'
		WHERE 1=1
		AND BOARD_NM = #{boardName}
	</update>
	
	<update id="modify">
		UPDATE  /* boardQuery.modify 2013.08.21 최지순 */  
			BG_BOARD_MASTER 
		SET 
			BOARD_NM = #{board_nm}
			, BOARD_DESC = #{board_desc}
		WHERE 1=1
		AND BOARD_ID = #{board_id}
	</update>
	
