		LIMIT 0, #{limitCount}	
	</select>
	
	<select id="searchByName" resultType="hashmap">
		SELECT /* boardQuery.searchByName 2013.08.21 최지순 */ 
			A.*
		FROM BG_BOARD_MASTER A
		WHERE 1=1
		AND USE_YN = 'Y'		
		AND BOARD_NM LIKE CONCAT('%', #{search}, '%')
		ORDER BY BOARD_ID DESC
	</select>
	
	<select id="listByPageNum" resultType="hashmap">
		SELECT  /* boardQuery.listByPageNum 2013.08.21 최지순 */ 
			A.*
		FROM BG_BOARD_MASTER A
		WHERE 1=1
		AND USE_YN = 'Y'
		ORDER BY BOARD_ID DESC
		LIMIT #{startNo}, #{perPage}	
	</select>
	
	<select id="totalCount" resultType="int">
		SELECT  /* boardQuery.totalCount 2013.08.21 최지순 */  
			count(*) 
		FROM BG_BOARD_MASTER
		WHERE 1=1
		AND USE_YN = 'Y'		
		<if test="search != null and search != ''">
			AND BOARD_NM LIKE CONCAT('%', #{search}, '%')
		</if>
